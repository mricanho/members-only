<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: "What do you want to say?", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Write it here...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-dark" %>
<% end %>